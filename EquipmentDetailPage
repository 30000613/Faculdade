    public EquipmentDetailPage(int input ) {
      
    initComponents();    
    index = input;    
    jLabel1.setText("Isto é");
        
    try{
    Connection con=DriverManager.getConnection("jdbc:derby://localhost:1527/ScoutsDB","AdminA","123456");  
    Statement st = con.createStatement();
    String query_Select = "Select * from EQUIPAMENTOS where \"Equipmentid\" = "+index;
    ResultSet rs = st.executeQuery(query_Select);
    
    String name = null;
    String descricao = null;
    String Data = null;
    String Tipo_equipamento = null;
    
    while (rs.next()){
        name = rs.getString(2);
        descricao = rs.getString(3);
        Tipo_equipamento = rs.getString(4);
        Data = rs.getString(5);
        
                }
    
    jTextField1.setText(name);
    jTextField2.setText(descricao);
    jTextField3.setText(Data);
    jTextField4.setText(Tipo_equipamento);
    
    st.close();
    con.close();

    }catch(Exception e){e.printStackTrace();};
        
        
        
        
        
        
    }
    
    
    
      public void PopulateDetails(int Id) {
    String name;
    try{
     
    Connection con=DriverManager.getConnection("jdbc:derby://localhost:1527/ScoutsDB","AdminA","123456");  
    Statement st = con.createStatement();
    String query_Select = "Select * from EQUIPAMENTOS\n" + "where Equipmentid = 1 ";
    ResultSet rs = st.executeQuery(query_Select);
    ResultSetMetaData rsmd= rs.getMetaData();
    name = rs.getString(2);

    st.close();
    con.close();
     
    
    
    }catch(Exception e){e.printStackTrace();};
           
    
}
    

